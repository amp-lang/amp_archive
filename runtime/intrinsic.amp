/// A generic slice type.
export struct Slice {
    ptr: ~mut u8,
    len: uint,
}

/// Returns the length of a slice.
export func SliceLen(slice: Slice) -> uint {
    return slice.len;
}

/// Converts a slice to a pointer.
export func SliceAsPtr(slice: Slice) -> ~mut u8 {
    return slice.ptr;
}

/// Converts a pointer and a length to a slice.
export func SliceFromPtr(ptr: ~mut u8, len: uint) -> Slice {
    return Slice .{ ptr = ptr, len = len };
}